
<div class="row">
	<aside class="col-md-4">
    	<section class="micropost_form">
      		<%= render 'shared/contac_form' %>
    	</section>
  	</aside>
  
  	<div class="col-md-8">
    	<% if @user.contacts.any? %>
      		<h3 style="color:#0099cc">Total Contacts (<%= @user.contacts.count %>)</h3>
      		<ol class="microposts">
        		<%= render @contacts %>
      		</ol>
      		<%= will_paginate @contacts %>
    	<% end %>
  	</div>
</div>
